<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkMode5"
    tools:context=".ActivityDeposit">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Enter Deposit Amount"
        android:textSize="30dp"
        android:textColor="@color/DarkMode2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.155" />



    <EditText
        android:id="@+id/etDepositAmount"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="right|center"
        android:text="0.00"
        android:textSize="24dp"
        android:textColor="@color/DarkMode2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toEndOf="@+id/tvDepositAmtTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <TextView
        android:id="@+id/tvDepositAmtTitle"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:gravity="right|center"
        android:text="$"
        android:textSize="24dp"
        android:textColor="@color/DarkMode2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <Button
        android:id="@+id/btnSubmitDeposit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:text="Confirm"
        android:textColor="@color/DarkMode2"
        android:backgroundTint="@color/DarkMode3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />

    <Button
        android:id="@+id/btnCancelDeposit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:text="Cancel"
        android:textColor="@color/DarkMode2"
        android:backgroundTint="@color/DarkMode3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />



</androidx.constraintlayout.widget.ConstraintLayout>